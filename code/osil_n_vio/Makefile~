CC = gcc
LIBS = -lm
CFLAGS = -Wall -O2 -march=native

EXECUTABLES = osil vio osiljob viojob

.PHONY: all clean

all: $(EXECUTABLES)

osil: osil.o
	$(CC) $(CFLAGS) -o $@ $^ $(LIBS)

vio: vio.o
	$(CC) $(CFLAGS) -o $@ $^ $(LIBS)

osiljob: osiljob.o
	$(CC) $(CFLAGS) -o $@ $^ $(LIBS)

viojob: viojob.o
	$(CC) $(CFLAGS) -o $@ $^ $(LIBS)

clean:
	rm -f *.o $(EXECUTABLES)

%.o: %.c
	$(CC) -c $(CFLAGS) $< -o $@
